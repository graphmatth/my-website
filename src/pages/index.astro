---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

import { Image } from "astro:assets";
import designSystem01 from "../assets/design-system/ds-datepicker.svg";
import designSystem02 from "../assets/design-system/ds-select.svg";
import designSystem03 from "../assets/design-system/ds-modal.svg";
---

<Layout title="Matthieu Caron - Frontend developer">
  <h1>
    Matthieu Caron <span> – Frontend developer</span>
  </h1>
  <p class="intro">
    I’m a Frontend Developer with a strong focus on crafting intuitive and
    engaging user interfaces. I like to works on products, design system and
    websites.
  </p>
  <hr />
  <h2 id="works" class="works-title">Works</h2>
  <ul role="list" class="link-card-grid">
    <Card
      href="/design-system"
      title="Synapse Design System"
      body="Learn how Astro works and explore the official API docs."
    >
    <!-- Display on desktop / tablet / mobile view -->
      <Image
        src={designSystem03}
        class="img-shadow"
        alt="date picker component"
      />
        <!-- Display on desktop / tablet view -->
      <Image src={designSystem01} class="img-shadow" alt="select component" />
        <!-- Display on desktop view -->
      <Image src={designSystem02} class="img-shadow" alt="modal component" />
    </Card>

    <Card
      href="/goodmed"
      title="Goodmed"
      body="Supercharge your project with new frameworks and libraries."
    />
    <Card
      href="/goodmed-website"
      title="Goodmed website"
      body="Supercharge your project with new frameworks and libraries."
    />
  </ul>
</Layout>

<style>
  h1,
  h2 {
    line-height: 1;
    margin-bottom: 1em;
  }

  a {
    color: var(--fg-color);
  }

  h1 {
    font-weight: 600;
  }

  h1 > span {
    font-weight: 400;
  }

  h2 {
    font-weight: 500;
  }

  .link-card-grid {
    display: grid;
    gap: 2.5rem;
    padding: 0;
  }

  hr {
    border-width: 0px;
    height: 1px;
    background-color: rgba(var(--fg-color), 0.085);
    display: block;
    width: 100%;
    margin: 3rem 0;
  }

  .intro {
    font-weight: 400;
    color: var(--text-color);
  }

  .intro > strong {
    font-weight: 500;
  }

  .works-title {
    margin-bottom: 1.5rem;
  }

  .img-shadow {
    max-width: 100%;
    filter: drop-shadow(0px 2px 28px rgba(34, 45, 57, 0.05));
  }
</style>
